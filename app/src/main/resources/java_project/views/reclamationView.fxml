<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox prefHeight="768" prefWidth="1376.0" 
    xmlns="http://javafx.com/javafx/21" 
    xmlns:fx="http://javafx.com/fxml/1" 
    stylesheets="@../css/voyageView.css" 
    fx:controller="java_project.controllers.ReclamationController" 
    spacing="25" 
    styleClass="card"> 
    
    <VBox spacing="10">
        <HBox alignment="CENTER_LEFT" spacing="20" styleClass="header-label-container">
            <Label text="ðŸ“¢ Reclamation Management" styleClass="header-label" />
            <Region HBox.hgrow="ALWAYS" />
            <HBox spacing="15" alignment="CENTER_RIGHT">
                <padding>
                    <Insets right="20" />
                </padding>
                <Button text="ðŸ”„ Refresh" onAction="#loadReclamations" styleClass="secondary-button" />
            </HBox>
        </HBox>
        
        <HBox spacing="20" alignment="CENTER_LEFT" style="-fx-padding: 0 10;">
            <Label text="Track and resolve customer complaints and issues" style="-fx-text-fill: #6B7280; -fx-font-size: 14;"/>
            <Region HBox.hgrow="ALWAYS" />
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Label text="Total Items:" styleClass="stats-label"/>
                <Label text="Active" styleClass="stats-value"/>
            </HBox>
        </HBox>
    </VBox>
    
    <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 15 20; -fx-effect: dropshadow(gaussian, rgba(19, 25, 33, 0.05), 10, 0, 0, 2);">
        <TextField promptText="Search complaints..." style="-fx-background-radius: 10; -fx-padding: 10 15; -fx-pref-width: 300;" />
    
        <Region HBox.hgrow="ALWAYS" />
        <Button text="Clear Filters" styleClass="secondary-button" />
        <Button text="Apply" styleClass="primary-button" /> 
    </HBox>
    
    <VBox VBox.vgrow="ALWAYS">
        <TableView fx:id="reclamationTable" VBox.vgrow="ALWAYS" styleClass="table-view">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="80" style="-fx-alignment: CENTER;"/>
                <TableColumn fx:id="colReservationId" text="Reservation ID" prefWidth="150" style="-fx-alignment: CENTER;" />
                <TableColumn fx:id="colTitle" text="Title" prefWidth="300" style="-fx-alignment: CENTER;" />
                <TableColumn fx:id="colPriority" text="Priority" prefWidth="150" style="-fx-alignment: CENTER;" />
                <TableColumn fx:id="colStatus" text="Status" prefWidth="150" style="-fx-alignment: CENTER;" />
                <TableColumn fx:id="colActions" text="Actions" prefWidth="200" style="-fx-alignment: CENTER;" />
            </columns>
             <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </VBox>
    
    <HBox spacing="20" alignment="CENTER_LEFT" styleClass="footer-bar"> 
        <Label text="âœ… Status: Ready" styleClass="status-label info" />
        <Region HBox.hgrow="ALWAYS" />
        <HBox spacing="20" alignment="CENTER_RIGHT">
            <HBox spacing="5">
                <Label text="Pending:" styleClass="stats-label"/> 
                <Label text="Issues" styleClass="stats-value"/> 
            </HBox>
            <HBox spacing="5">
                <Label text="Resolved:" styleClass="stats-label"/>
                <Label text="Completed" styleClass="stats-value" style="-fx-text-fill: #10B981;"/>
            </HBox>
            <Separator orientation="VERTICAL" />
            <HBox spacing="5">
                <Label text="Last updated:" styleClass="stats-label"/>
                <Label text="Just now" styleClass="stats-value"/>
            </HBox>
        </HBox>
    </HBox>
</VBox>