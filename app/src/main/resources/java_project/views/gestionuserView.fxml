<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox prefHeight="768" prefWidth="1376.0"
    xmlns="http://javafx.com/javafx/21"
    xmlns:fx="http://javafx.com/fxml/1" 
    stylesheets="@../css/voyageView.css" 
    fx:controller="java_project.controllers.UserController" 
    spacing="25" 
    styleClass="card"> <VBox spacing="10">
        <HBox alignment="CENTER_LEFT" spacing="20" styleClass="header-label-container">
            <Label text="ðŸ“Ž User Management" styleClass="header-label" />
            <Region HBox.hgrow="ALWAYS" />
            <HBox spacing="15" alignment="CENTER_RIGHT">
                <padding>
                    <Insets right="20" />
                </padding>
                <Button text="ðŸ”„ Refresh" onAction="#loadUsers" styleClass="secondary-button" />
                <Button  text="+ Add New User" styleClass="add-user" onAction="#openAddUserModal" />
            </HBox>
        </HBox>
        
        <HBox spacing="20" alignment="CENTER_LEFT" style="-fx-padding: 0 10;">
            <Label text="Manage your team members and their permissions" style="-fx-text-fill: #6B7280; -fx-font-size: 14;"/>
            <Region HBox.hgrow="ALWAYS" />
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Label text="Total Users:" styleClass="stats-label"/>
                <Label text="42" styleClass="stats-value"/>
            </HBox>
        </HBox>
    </VBox>
    
    <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 15 20; -fx-effect: dropshadow(gaussian, rgba(19, 25, 33, 0.05), 10, 0, 0, 2);">
        <TextField promptText="Search users..." fx:id="searchField" style="-fx-background-radius: 10; -fx-padding: 10 15; -fx-pref-width: 300;" />
        <ComboBox promptText="Filter by Role" style="-fx-background-radius: 10; -fx-pref-width: 150;" />
        <ComboBox promptText="Filter by Status" style="-fx-background-radius: 10; -fx-pref-width: 150;" />
        <Region HBox.hgrow="ALWAYS" />
        <Button text="Clear Filters" onAction="#clearFilters" styleClass="secondary-button" />
        <Button  text="Apply" onAction="#searchAndReplaceList" styleClass="primary-button" /> </HBox>
    
    <VBox VBox.vgrow="ALWAYS">
        <TableView fx:id="userTable" VBox.vgrow="ALWAYS" styleClass="table-view">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="80" style="-fx-alignment: CENTER;"/>
                <TableColumn fx:id="colName" text="Full Name" prefWidth="250" style="-fx-alignment: CENTER;"/>
                <TableColumn fx:id="colEmail" text="Email" prefWidth="320" style="-fx-alignment: CENTER;"/>
                <TableColumn fx:id="colTel" text="Phone" prefWidth="180" style="-fx-alignment: CENTER;"/>
                <!-- <TableColumn fx:id="colRole" text="Role" prefWidth="150" style="-fx-alignment: CENTER;"/> -->
                <!-- <TableColumn fx:id="colStatus" text="Status" prefWidth="120" /> -->
                <TableColumn fx:id="colActions" text="Actions" prefWidth="250" style="-fx-alignment: CENTER;" />
            </columns>
             <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </VBox>
    
    <HBox spacing="20" alignment="CENTER_LEFT" styleClass="footer-bar"> <Label fx:id="statusLabel" text="âœ… Status: Ready â€¢ 42 users loaded" styleClass="status-label info" />
        <Region HBox.hgrow="ALWAYS" />
        <HBox spacing="20" alignment="CENTER_RIGHT">
            <HBox spacing="5">
                <Label text="Active:" styleClass="stats-label"/> <Label text="38" styleClass="stats-value"/> </HBox>
            <HBox spacing="5">
                <Label text="Inactive:" styleClass="stats-label"/>
                <Label text="4" styleClass="stats-value" style="-fx-text-fill: #EF4444;"/>
            </HBox>
            <Separator orientation="VERTICAL" />
            <HBox spacing="5">
                <Label text="Last updated:" styleClass="stats-label"/>
                <Label text="Just now" styleClass="stats-value"/>
            </HBox>
        </HBox>
    </HBox>
</VBox>