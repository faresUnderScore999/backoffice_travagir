        <Region HBox.hgrow="ALWAYS" />
        <Button text="Clear Filters" styleClass="secondary-button" />
        <Button text="Apply" styleClass="primary-button" /> 
    </HBox>
    <VBox VBox.vgrow="ALWAYS">
        <TableView fx:id="offerTable" VBox.vgrow="ALWAYS" styleClass="table-view">
