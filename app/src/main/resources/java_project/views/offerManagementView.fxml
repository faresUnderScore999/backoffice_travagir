<?import javafx.geometry.Insets?>

<VBox prefHeight="768" prefWidth="1376.0"
    xmlns="http://javafx.com/javafx/21"
    xmlns:fx="http://javafx.com/fxml/1" 
    stylesheets="@../css/voyageView.css" 
    fx:controller="java_project.controllers.OfferController" 
    spacing="25" 
    styleClass="card"> 

    <VBox spacing="10">
        <HBox alignment="CENTER_LEFT" spacing="20" styleClass="header-label-container">
            <Label text="ðŸŽ Offer &amp; Promotion Management" styleClass="header-label" />
            <Region HBox.hgrow="ALWAYS" />
            <HBox spacing="15" alignment="CENTER_RIGHT">
                <padding>
                    <Insets right="20" />
                </padding>
                <Button text="ðŸ”„ Refresh" onAction="#loadOffers" styleClass="secondary-button" />
                <Button text="+ Create New Offer" styleClass="add-user" onAction="#openAddModal" />
