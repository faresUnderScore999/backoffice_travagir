<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox prefHeight="768" prefWidth="1376.0"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1" 
      stylesheets="@../css/voyageView.css" 
      fx:controller="java_project.controllers.UserOfferController" 
      spacing="25" 
      styleClass="card">

    <VBox spacing="10">
        <HBox alignment="CENTER_LEFT" spacing="20" styleClass="header-label-container">
            <Label text="ðŸŽ User Offers Management" styleClass="header-label" />
            <Region HBox.hgrow="ALWAYS" />
            <HBox spacing="15" alignment="CENTER_RIGHT">
                <padding>
                    <Insets right="20" />
                </padding>
                <Button text="ðŸ”„ Refresh Data" onAction="#loadUserOffers" styleClass="secondary-button" />
                <Button text="+ Claim New Offer" onAction="#openClaimOfferModal" styleClass="add-user" />
            </HBox>
        </HBox>
    </VBox>

    <VBox VBox.vgrow="ALWAYS">
        <TableView fx:id="userOfferTable" VBox.vgrow="ALWAYS" styleClass="table-view">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="60" style="-fx-alignment: CENTER;"/>
                <TableColumn fx:id="colUserId" text="User ID" prefWidth="100" style="-fx-alignment: CENTER;"/>
                <TableColumn fx:id="colOfferId" text="Offer ID" prefWidth="100" style="-fx-alignment: CENTER;"/>
                <TableColumn fx:id="colStatus" text="Status" prefWidth="120" style="-fx-alignment: CENTER;"/>
                <TableColumn fx:id="colClaimedDate" text="Claimed Date" prefWidth="150" style="-fx-alignment: CENTER;"/>
                <TableColumn fx:id="colUsedDate" text="Used Date" prefWidth="150" style="-fx-alignment: CENTER;"/>
                <TableColumn fx:id="colActions" text="Actions" prefWidth="200"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </VBox>

    <HBox spacing="20" alignment="CENTER_LEFT" styleClass="footer-bar">
        <Label fx:id="statusLabel" text="âœ… Status: Ready" styleClass="status-label info" />
    </HBox>

</VBox>
